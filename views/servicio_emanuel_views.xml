<odoo>
  <data>
    <!-- explicit list view definition -->

    <record model="ir.ui.view" id="odoo_emanuel.list">
      <field name="name">odoo_emanuel servicio_emanuel</field>
      <field name="model">odoo_emanuel.servicio_emanuel</field>
      <field name="arch" type="xml">
        <tree>
          <field name="name"/>
          <field name="activo"/>         
        </tree>
      </field>
    </record>


    <!-- actions opening views on models -->

    <record model="ir.actions.act_window" id="odoo_emanuel.action_window">
      <field name="name">odoo_emanuel servicio_emanuel window</field>
      <field name="res_model">odoo_emanuel.servicio_emanuel</field>
      <field name="view_mode">tree,form</field>
    </record>

    <!-- server action to the one above -->

    <record model="ir.actions.server" id="odoo_emanuel.action_server">
      <field name="name">odoo_emanuel servicio_emanuel server</field>
      <field name="model_id" ref="model_odoo_emanuel_servicio_emanuel"/>
      <field name="state">code</field>
      <field name="code">
        action = {
          "type": "ir.actions.act_window",
          "view_mode": "tree,form",
          "res_model": odoo_emanuel.servicio_emanuel,
        }
      </field>
    </record>

    <!-- Top menu item -->
    
    <menuitem id="odoo_emanuel.menu_servicios" 
      name="Servicios Emanuel" 
      parent="product_menu_catalog" 
      action="odoo_emanuel.action_window"
      groups="sales_team.group_sale_salesman" 
      sequence="18"/>

  </data>
</odoo>